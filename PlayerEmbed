<!-- HTML Placeholder for the external player -->
<div class="player">
    <div id="external-player"></div>
</div>

<script src="https://w.soundcloud.com/player/api.js"></script>
<script>
    // Function to embed SoundCloud Player
    function embedSoundCloudPlayer(trackUrl) {
        // Define the embed URL and player options
        const iframe = document.createElement('iframe');
        iframe.width = '100%';
        iframe.height = '166';
        iframe.scrolling = 'no';
        iframe.frameBorder = 'no';
        iframe.allow = 'autoplay';
        iframe.src = `https://w.soundcloud.com/player/?url=${encodeURIComponent(trackUrl)}&color=%231db954&auto_play=false&hide_related=false&show_comments=true&show_user=true&show_reposts=false&show_teaser=true&visual=true`;

        // Add the player to the placeholder div
        document.getElementById('external-player').appendChild(iframe);
    }

    // Example of embedding a track using its SoundCloud URL
    embedSoundCloudPlayer('https://soundcloud.com/artist-name/track-name');
</script>
